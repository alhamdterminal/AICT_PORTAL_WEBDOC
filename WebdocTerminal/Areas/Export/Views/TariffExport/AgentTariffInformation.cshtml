<script src="~/lib/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script src="~/lib/devextreme/js/dx.aspnet.mvc.js"></script>
<script src="~/js/app.js/AgentTariffInformation.js"></script>

@{
    var agents = (IEnumerable<SelectListItem>)ViewData["ShippingAgents"];
}

<style>
    .newbox {
        text-align: center;
        padding: 3px 0px 3px 0px;
        font-size: 14px;
        font-weight: 600;
        margin: -3px -10px 10px -10px;
        background: #e9e9e9;
        border-bottom: 1px solid #d1d1d1;
    }
</style>

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Agent Tariff Information</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <div class="x_content">

                    <div class="row">

                        <div class="col-sm-5">
                            <div class="x_content">
                                <div class="form-horizontal form-label-left row">
                                    <div class="item form-group">
                                        <label class="control-label col-md-2" for="name">
                                            Agent
                                        </label>
                                        <div class="col-md-10">
                                            @Html.DropDownList("Name", agents, "Select Agent", new { @class = "form-control", @id = "agentdropdown" })
                                        </div>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="x_content">
                                <div class="form-horizontal form-label-left row">
                                    <div class="item form-group">
                                        <label class="control-label col-md-2" for="name">
                                            To Agent
                                        </label>
                                        <div class="col-md-10">
                                            @Html.DropDownList("ToAgentName", agents, "Select Agent", new { @class = "form-control", @id = "toagentdropdown" })
                                        </div>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="x_content">
                                <div class="form-horizontal form-label-left row">
                                    <div class="item form-group">

                                        <div class="col-md-12">
                                            <button class="btn btn-primary" onclick="FromOneAgentToAnother()"> Assign To New Agent </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="ln_solid"></div>
                            </div>
                        </div>

                    </div>


                </div>
                <div class="x_content">


                    <div id="agentTariffGrid">

                    </div>



                    <div class="ln_solid"></div>

                    <div id="tariffGrid">

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>



<script src="~/lib/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script src="~/lib/devextreme/js/dx.aspnet.mvc.js"></script>


