@{
    ViewData["Title"] = "Update Voucher";
    var VoucherType = (IEnumerable<SelectListItem>)ViewData["VoucherType"];
}


<script src="~/js/app.js/UpdateVoucherView.js"></script>



<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Voucher
            </h3>
        </div>
        <div class="title_right">
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                                Voucher Type:
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                @Html.DropDownList("VoucherTypeId", VoucherType, "Select Voucher Type", new { @class = "form-control select2", @id = "voucherTypeId", @disabled = "disabled", })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="control-group">
                            <div class="controls">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                    Date:
                                </label>
                                <div class="col-md-9 col-xs-12">
                                    <input type="date" class="form-control has-feedback-left" id="voucherDate"   required readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="item form-group">
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="name">
                                Voucher Code:
                            </label>
                            <div class="col-md-5 col-sm-8 col-xs-12">
                                <input type="text" class="form-control" id="vouchercode" readonly="readonly">
                            </div>
                            <label class="control-label col-md-2 col-sm-3 col-xs-12" for="name">
                                Unique No :
                            </label>
                            <div class="col-md-3 col-sm-8 col-xs-12">
                                <input type="text" class="form-control" id="voucherid" readonly="readonly">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="control-group">
                                <div class="controls">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                        Status:
                                    </label>
                                    <div class="col-md-9 col-xs-12">
                                        <input type="text" class="form-control has-feedback-left" id="status" required readonly>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 col-sm-12 col-xs-12">
                            <button id="btnSubmit" type="button" onclick="finddata()" class="btn btn-primary" style="float: right;">Find</button>
                        </div>
                    </div>
                </div>

                <div class="x_content">
                    <div id="gridContainer"></div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <button class="btn btn-danger" style="float:right;" id="btnSubmit" onclick="PrintDetail()">Print</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    $('.select2').select2();
</script>