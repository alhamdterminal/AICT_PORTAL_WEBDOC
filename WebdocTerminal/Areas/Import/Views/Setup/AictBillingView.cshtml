
@{
    var ShippingAgent = (IEnumerable<SelectListItem>)ViewData["ShippingAgent"];
}
<style>
    #gridlist {
        max-height: 750px;
    }
</style>
<script src="~/js/app.js/AictBillingView.js"></script>


<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Aict Billing To Line</h3>
        </div>

    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_content">

                    <form class="form-horizontal form-label-left" novalidate="" id="PercentForAictBillingToLineForm">

                        <div class="row">

                            <div class="col-md-3 col-sm-3 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-3 col-xs-12" for="name">
                                        Line:
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownList("ShippingAgentId", ShippingAgent, "Select Shipping Agent ", new { @class = "form-control select2", @id = "shippingAgentId" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-sm-3 col-xs-12">

                                <div class="control-group">
                                    <div class="controls">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                            From:
                                        </label>
                                        <div class="col-md-9 col-xs-12">
                                            <input type="text" class="form-control has-feedback-left" id="single_cal2" name="todate" aria-describedby="inputSuccess2Status2">
                                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                            <span id="inputSuccess2Status2" class="sr-only">(success)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-sm-3 col-xs-12">

                                <div class="control-group">
                                    <div class="controls">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                            To:
                                        </label>
                                        <div class="col-md-9 col-xs-12">
                                            <input type="text" class="form-control has-feedback-left" id="single_cal3" name="fromdate" aria-describedby="inputSuccess2Status2">
                                            <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                            <span id="inputSuccess2Status2" class="sr-only">(success)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-sm-3 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Sales Tax
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input type="number" class="form-control" name="SalesTax"   id="salesTax">
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <button id="btnSubmit" type="button" onclick="selectAll()" class="btn btn-success" style="float:right;">Select ALL</button>
                                        <button id="btnSubmit" type="button" onclick="unselectAll()" class="btn btn-danger" style="float:right;">Un-Select ALL</button>
                                        <button class="btn btn-primary" style="float:right;" onclick="Finddetail()" type="button" id="btnSubmit">Find</button>

                                    </div>
                                </div>
                            </div>

                        </div>


                    </form>

                    <br />
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="x_panel">
                                <div class="x_content">
                                     

                                    <div class="row">
                                        <div id="gridlist"></div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="row">
                                        <div class="col-md-6 col-sm-6 col-xs-12"></div>
                                            <div class="col-md-3 col-sm-3 col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                                        Total Selected Items
                                                    </label>
                                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                                        <input type="number" class="form-control" name="Selectednoofitems" readonly id="selectednoofitems">
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="col-md-3 col-sm-3 col-xs-12">
                                                <div class="item form-group">
                                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                                        Total Amount Of Billing
                                                    </label>
                                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                                        <input type="number" class="form-control" name="totalAmountOfBilling" readonly id="TotalAmountOfBilling">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <br />
                                        <br />
                                        <div class="form-horizontal form-label-left">
                                            <div class="col-md-12 col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <button class="btn btn-success" style="float:right;" onclick="AddDeatil()" type="button" id="btnSubmit">Save Detail</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
      
</div>



<script>
    $('.select2').select2();
</script>

