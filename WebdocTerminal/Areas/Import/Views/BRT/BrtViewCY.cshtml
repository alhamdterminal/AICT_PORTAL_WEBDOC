                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <input class="form-control" id="location" type="text" name="location">
                                        </div>
                                    </div>
                                </div>*@
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12">
