@{
    var Shippingline = (IEnumerable<SelectListItem>)ViewData["Shippingline"];

    var Goodshead = (IEnumerable<SelectListItem>)ViewData["Goodshead"];


}
<link rel="stylesheet" href="~/css/viewer.part.bundle.css" />
<script src="~/js/viewer.part.bundle.js"></script>
<script src="~/js/app.js/AICTAndLineIndexReport.js"></script>

<style>

    .mobBtn {
        margin-top: 23px;
    }
</style>




<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>  AICT & Line Index Tariff Report </h3>
        </div>

    </div>
 
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_content">


                    <div class="row" style="margin-top: 13px;">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label  col-md-4 col-xs-12" for="first-name">
                                    Shipping line
                                </label>
                                <div class="col-md-8 col-xs-12">
                                    @Html.DropDownList("Shippinglineid", Shippingline, "Select Shippingline", new { @class = "form-control select2", @id = "Shippinglineid", required = "required" })

                                </div>
                            </div>
                        </div>


                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="control-label  col-md-4 col-xs-12" for="first-name">
                                    Goods Head
                                </label>
                                <div class="col-md-8 col-xs-12">
                                    @Html.DropDownList("Goodsheadid", Goodshead, "Select Goodshead", new { @class = "form-control select2", @id = "GoodsHeadId", required = "required" })

                                </div>
                            </div>
                        </div>



                    </div>



                    <div class="row">
                        <div class="col-md-12 col-xs-12">
                            <button type="button" class="btn btn-dark mobBtn" onclick="myFunction()" style="float:right">Submit</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div id="large-indicator"></div>
                                <div class="x_content" id="repotdata">

                                </div>
                            </div>
                        </div>

                    </div>
                </div>


                <div class="ln_solid"></div>

            </div>
        </div>
    </div>
</div>



<script>
    $('.select2').select2();
</script>



