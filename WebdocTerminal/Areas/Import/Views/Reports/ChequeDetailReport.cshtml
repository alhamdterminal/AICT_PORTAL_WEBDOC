

@{
    var partys = (IEnumerable<SelectListItem>)ViewData["Partys"];
    var banks = (IEnumerable<SelectListItem>)ViewData["Banks"];
    var chequeNo = (IEnumerable<SelectListItem>)ViewData["ChequeNo"];
}
<link rel="stylesheet" href="~/css/viewer.part.bundle.css" />
<script src="~/js/viewer.part.bundle.js"></script>
<script src="~/js/app.js/ChequeDetailReport.js"></script>


<div class="right_col" role="main">
    <div class="page-title x_panel">
        <div class="title_left">
            <h3>
                Cheque Detail
            </h3>
        </div>

    </div>
    <div class="clearfix"></div>
    <div class="x_panel">
        <div class="row">
            <div class="col-md-5 col-xs-12">
                <div class="form-group">
                    <label class="control-label  col-md-2 col-xs-12" for="first-name">
                        Bank
                    </label>
                    <div class="col-md-9 col-xs-12">
                        @Html.DropDownList("BankId", banks, "Select Bank", new { @class = "form-control select2", @id = "bank", required = "required" })

                    </div>
                </div>
            </div>
            <div class="col-md-5 col-xs-12">
                <div class="form-group">
                    <label class="control-label  col-md-2 col-xs-12" for="first-name">
                        Cheque No
                    </label>
                    <div class="col-md-9 col-xs-12">
                        @Html.DropDownList("ChequeReceivedId", chequeNo, "Select Cheque No", new { @class = "form-control select2", @id = "chequeno", required = "required" })

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-xs-12">
                <div class="form-group">
                    <label class="control-label  col-md-2 col-xs-12" for="first-name">
                        Party
                    </label>
                    <div class="col-md-9 col-xs-12">
                        @Html.DropDownList("PartyId", partys, "Select Party", new { @class = "form-control select2", @id = "partyId", required = "required" })

                    </div>
                </div>
            </div>
            <div class="col-md-7">
                @{Html.RenderPartial("_DateFilter"); }
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div id="large-indicator"></div>
                <div class="x_content" id="repotdata">

                </div>
            </div>
        </div>

    </div>

</div>


<script>
    $('.select2').select2();
</script>