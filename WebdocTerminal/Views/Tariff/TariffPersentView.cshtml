@{
    var ShippingAgents = (IEnumerable<SelectListItem>)ViewData["ShippingAgents"];
}
<script src="~/js/app.js/TariffPersentView.js"></script>

<style>
    .newbox {
        text-align: center;
        padding: 3px 0px 3px 0px;
        font-size: 14px;
        font-weight: 600;
        margin: -3px -10px 10px -10px;
        /* color: white; */
        background: #e9e9e9;
        border-bottom: 1px solid #d1d1d1;
    }
</style>

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Tariff Percentage</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <div class="x_content">

                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_content">

                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-12">
                                        <div class="item form-group">
                                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                                Shipping Agent
                                            </label>
                                            <div class="col-md-8 col-sm-8 col-xs-12">
                                                @Html.DropDownList("ShippingAgentId", ShippingAgents, "Please Select", new { @class = "form-control select2", @id = "shippingAgentId" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div id="tariffGrid"></div>

                            </div>

                        </div>

                    </div>

                    <div class="form-horizontal form-label-left row">

                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="item form-group">
                                <button id="btnSubmit" type="button" onclick="submitTariffPersent()" class="btn btn-success">Submit</button>
                            </div>
                        </div>

                    </div>

                    <div class="ln_solid"></div>


                </div>
            </div>
        </div>

    </div>


</div>





<script>
    $('.select2').select2();
</script>
