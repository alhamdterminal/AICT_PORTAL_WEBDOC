<script src="~/lib/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script src="~/lib/devextreme/js/dx.aspnet.mvc.js"></script>
@{
    var tariffHeads = (IEnumerable<SelectListItem>)ViewData["TariffHead"];
}

<style>


    .error {
        color: red;
    }

    #error {
        visibility: hidden;
        width: 200px;
        background-color: #d25656;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 16px;
        z-index: 1;
        font-size: 17px;
    }

        #error.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }
</style>

<script src="~/js/app.js/TariffCharges.js"></script>


<style>
    .newbox {
        text-align: center;
        padding: 3px 0px 3px 0px;
        font-size: 14px;
        font-weight: 600;
        margin: -3px -10px 10px -10px;
        /* color: white; */
        background: #e9e9e9;
        border-bottom: 1px solid #d1d1d1;
    }
</style>

<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <h3>Tariff Charges</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">

                <div class="x_content">

                    <form id="tariffCharegsForm">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Tariff Contract:
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        @Html.DropDownList("TariffHeadId", tariffHeads, "Select Tariff Head", new { @class = "form-control select2", @id = "tariffHead" })
                                        <span class="error" id="TariffHeadIderror"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Implement From
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input type="date" id="implementFrom" class="form-control" name="ImplementFrom">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Implement To
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <input type="date" id="implementto" class="form-control" name="ImplementTo">
                                    </div>
                                </div>
                            </div>



                        </div>

                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Storage Applicable on
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <select class="form form-control" name="IsCBMorRate" id="iscbmorRate">
                                            <option value="true">CBM OR Weight</option>
                                            <option value="false">Size</option>
                                        </select>
                                        <span class="error" id="IsCBMorRateerror"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">
                                    <label class="control-label col-md-4 col-sm-4 col-xs-12" for="name">
                                        Carogo Type
                                    </label>
                                    <div class="col-md-8 col-sm-8 col-xs-12">
                                        <select class="form form-control" name="TariffType" id="tariffType">
                                            <option value="CFS">CFS /  FCL</option>
                                            <option value="CFSLCL">CFS / LCL</option>
                                            <option value="CY">CY</option>
                                            <option value="CYPerIndex">CY / PerIndex</option>
                                        </select>
                                        <span class="error" id="tariffTypeerror"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <div class="item form-group">

                                    <div class="checkbox" style="display: inline-block;">
                                        <label>
                                            <input type="checkbox" name="IsGeneral" class="flat" checked="checked" value="true">  Percentage
                                            <input type="hidden" value="false" name="IsGeneral" />
                                        </label>
                                    </div>
                                    <div class="checkbox" style="display: inline-block;">
                                        <label>
                                            <input type="checkbox" name="IsDollerRate" class="flat" value="true"> Doller Rate
                                            <input type="hidden" value="false" name="IsDollerRate" />

                                        </label>
                                    </div>

                                    <div class="checkbox" style="display: inline-block;">
                                        <label>
                                            <input type="checkbox" name="isactive" class="flat" checked="checked" value="true"> Active
                                            <input type="hidden" value="false" name="isactive" />
                                        </label>
                                    </div>
                                    <div class="checkbox" style="display: inline-block;">
                                        <label>
                                            <input type="checkbox" name="dailycharges" class="flat"> Daily Charges
                                        </label>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="ln_solid"></div>

                        <div class="form-horizontal form-label-left row" style="border: 1 px solid; background-color: beige; ">

                            <div class="col-md-12 col-sm-12 col-xs-12 ">
                                <h2 class="control-label col-md-12 col-sm-12 col-xs-12" style=" text-align: center; color: black; font-weight: bold;">
                                    AICT Share
                                </h2>
                            </div>
                            <div class="col-md-5 col-sm-5 col-xs-12 ">
                                <div class="item form-group  x_panel">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 20
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictRate20" name="AICTRate20">
                                    </div>
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 40
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictRate40" name="AICTRate40">
                                    </div>
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 45
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictRate45" name="AICTRate45">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-7 col-sm-7 col-xs-12 ">
                                <div class="item form-group  x_panel">
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        CBM Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictcbmRate" name="AICTCBMRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        Weight Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictWeightRate" name="AICTWeightRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        PerIndex Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictPerIndexRate" name="AICTPerIndexRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        Divided Index
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="aictDevededIndexAmount" name="AICTDevededIndexAmount">
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="form-horizontal form-label-left row" style="border: 1 px solid; background-color: beige; ">

                            <div class="col-md-12 col-sm-12 col-xs-12 ">
                                <h2 class="control-label col-md-12 col-sm-12 col-xs-12" style=" text-align: center; color: black; font-weight: bold;">
                                    F.F Share
                                </h2>
                            </div>
                            <div class="col-md-5 col-sm-5 col-xs-12 ">
                                <div class="item form-group  x_panel">
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 20
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffRate20" name="FFRate20">
                                    </div>
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 40
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffRate40" name="FFRate40">
                                    </div>
                                    <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                        Rate 45
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffRate45" name="FFRate45">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-7 col-sm-7 col-xs-12 ">
                                <div class="item form-group  x_panel">
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        CBM Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffcbmRate" name="FFCBMRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        Weight Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffWeightRate" name="FFWeightRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        PerIndex Rate
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffPerIndexRate" name="FFPerIndexRate">
                                    </div>
                                    <label class="control-label col-md-1 col-sm-2 col-xs-12" for="name">
                                        Divided Index
                                    </label>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <input type="text" class="form-control" id="ffDevededIndexAmount" name="FFDevededIndexAmount">
                                    </div>
                                </div>
                            </div>

                        </div>





                        <button type="button" id="btnSubmit" onclick="addTariff()" class="btn btn-success" style="display: inline-grid;float: right;">Add Charges</button>
                    </form>



                    <div class="ln_solid"></div>

                    @*<div class="row">

                            <div class="col-sm-12">
                                <div class="x_content">

                                    <div id="tariffGrid"></div>

                                </div>
                            </div>
                        </div>*@




                    <div class="row">

                        <div class="col-md-12 col-sm-12 col-xs-12">

                            <div class="x_content">
                                <div id="tariffGrid"></div>

                            </div>

                        </div>

                    </div>



                </div>
            </div>
        </div>

    </div>

</div>



<script>
    $('.select2').select2();
</script>
